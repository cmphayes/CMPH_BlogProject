<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Conall's Blog Site</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    @*<link href="~/css/grayscale.css" rel="stylesheet">*@
    <link href="~/Scripts/grayscale.css" rel="stylesheet" />
    <link href="~/Scripts/Custom.css" rel="stylesheet" />
    @*<link href="~/css/Custom.css" rel="stylesheet" />*@
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css">

    <link rel="icon" href="~/img/FaviconImage.png" />
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href=@Url.Action("Index","Home")>Main Page</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href=@Url.Action("About","Home")>About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href=@Url.Action("Contact", "Home")>Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href=@Url.Action("Feature", "Blogs")>Content</a>
                    </li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Mod"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Log Out", "LogOff", "Account", null, new { @class = "nav-link js-scroll-trigger" })
                        </li>
                        <li class="nav-item">
                            <div> @User.Identity.Name </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href=@Url.Action("Login", "Account")>Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href=@Url.Action("Register", "Account")>Create Account</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="conatiner">
        <div class="row"><hr /></div>
        <div class="row"><br /></div>
        <div class="row"><br /></div>

    </div>

    @RenderBody()


    <!-- Footer -->
    <footer class="bg-black small text-center text-white-50">
        <div class="container">
        </div>
    </footer>

    <!--css-->
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    @*<script src="~/js/grayscale.min.js"></script>*@

    <script src="~/Scripts/grayscale.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>