@model CMPH_BlogProject.Models.EmailModel
@{
    ViewBag.Title = "Contact";
}
<!-- Contact Section -->
<section class="contact-section bg-white">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4>Send me a message.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(m => m.FromName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "subject" })
                @Html.ValidationMessageFor(m => m.Subject)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Body, new { @class = "form-control", placeholder = "body" })
                @Html.ValidationMessageFor(m => m.Body)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
                @Html.ValidationMessageFor(m => m.FromEmail)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button id="btnContact" class="btn-danger">Send</button>
            </div>
        </div>
    }

    <button type="button" class="btn btn-li"><i class="fa fa-linkedin pr-1"></i> Linkedin</button>
    <button type="button" class="btn btn-git"><i class="fa fa-github pr-1"></i> Github</button>

</section>


@section scripts{
    <script>
        $('#btnContact').on('click', function () {
            $('#contactForm').submit();
        });

    </script>

}
